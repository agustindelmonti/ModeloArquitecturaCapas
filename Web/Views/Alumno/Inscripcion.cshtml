@model IEnumerable<Entities.Curso>

@{
    ViewBag.Title = "Inscripcion";
}

<h2>Inscripcion</h2>

<table class="table">
    @if (Model.Count() != 0) {
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Materia.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comision.Descripcion)
            </th>
            <th></th>
        </tr>

        foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Materia.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comision.Descripcion)
            </td>
            <td>
                @using (Html.BeginForm("Confirmar", "Alumno", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="CursoID" value="@item.CursoID" />
                    <input type="submit" class="btn btn-warning" value="Inscribir" />
                }
            </td>
        </tr>
        }
    }
    else {
        <h2> @ViewBag.ErrorMessage </h2>
    }
</table>