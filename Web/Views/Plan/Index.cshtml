@model IEnumerable<Entities.Plan>

@{
    ViewBag.Title = "Index";
}

<br />
<h2>Planes</h2>

<p>
    <a href="@Url.Action("Create", "Plan")" class="btn btn-success">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        Nuevo
    </a>
</p>


@using (Html.BeginForm("Index", "Plan", FormMethod.Get))
{
    <p>
        <div style="display: flex; flex-direction: row">
            @Html.TextBox("descripcion", null, new { @class = "form-control", @placeholder = "Descripcion plan" })
            <button type="submit" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Buscar
            </button>
        </div>
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Especialidad.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Especialidad.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.PlanID }) |
                @Html.ActionLink("Detalle", "Details", new { id = item.PlanID }) |
                @Html.ActionLink("Borrar", "Delete", new { id = item.PlanID })
            </td>
        </tr>
    }

</table>
