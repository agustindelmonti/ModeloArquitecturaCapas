<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container" style="display: flex;">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img width="50px" height="50px" src="~/Images/academia-icon.png" />
                @Html.ActionLink("Academia", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse">
                @if (User.IsInRole("Docente"))
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Inicio", "Index", "Docente")</li>
                        <li>@Html.ActionLink("Mis Cursos", "MisCursos", "Docente")</li>
                        <li>@Html.ActionLink("Perfil", "Perfil", "Docente")</li>
                    </ul>
                }
                @if (User.IsInRole("No Docente"))
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                        <li>@Html.ActionLink("Cursos", "About", "Home")</li>
                        <li>@Html.ActionLink("Comisiones", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Cursos", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Especialidades", "Contact", "Home")</li>
                    </ul>
                }
                @if (User.IsInRole("Alumno"))
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Inicio", "Index", "Alumno")</li>
                        <li>@Html.ActionLink("Inscribirse", "Inscripcion", "Alumno")</li>
                        <li>@Html.ActionLink("Estado Academico", "EstadoAcademico", "Alumno")</li>
                        <li>@Html.ActionLink("Perfil", "Perfil", "Alumno")</li>
                    </ul>
                }
            </div>
            <div style="margin-top:10px;margin-left:500px;">
                @using (Html.BeginForm("Logout", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <input type="submit" class="button btn btn-warning" value="Salir">
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Sistema Academia</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
