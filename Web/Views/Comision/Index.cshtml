@model IEnumerable<Entities.Comision>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


@using (Html.BeginForm("Index", "Comision", FormMethod.Get)) {
<p>
    Número de Comisión: @Html.TextBox("nroComision") <br />
    <input type="submit" value="Filter" />
</p>
}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Plan.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AnioEspecialidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Plan.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AnioEspecialidad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.State)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ComisionID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ComisionID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ComisionID })
        </td>
    </tr>
}

</table>
