    <div class="timetable-top">
        <h2 class="timetable-title">Horarios</h2>
        <h3>Descargar</h3>
    </div>

    <!-- Drop down menu filters-->
    @{
        List<SelectListItem> FiltrosBloques = new List<SelectListItem>();
        FiltrosBloques.Add(new SelectListItem
        {
            Text = "AtlantaPort",
            Value = "AtlantaPort"
        });
