
@{
    ViewBag.Title = "Horario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/Content/Horario/Horario.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/Horario/TimeTable.css" />
</head>

<body>
    <!-- Add your site or app content here -->
