@model IEnumerable<Entities.Curso>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>




@using (Html.BeginForm("Index", "Curso", FormMethod.Get)) {
    <p>
        Año: @Html.TextBox("año") <br />
        Materia: @Html.TextBox("materia") <br />
        <input type="submit" value="Filter" />
    </p>
}



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Materia.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AnioCalendario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cupo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Materia.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AnioCalendario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cupo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.State)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CursoID }) |
            @Html.ActionLink("Details", "Details", new { id=item.CursoID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CursoID })
        </td>
    </tr>
}

</table>
