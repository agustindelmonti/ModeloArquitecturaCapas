@model IEnumerable<Entities.AlumnoInscripcion>

@{
    ViewBag.Title = "AlumnosCurso";
}
<br>
<h2>Alumnos del curso</h2>

@using (Html.BeginForm("Calificar", "Docente", FormMethod.Post)) {
<div>
    @if (ViewBag.EditMode == false) {
        @Html.ActionLink("Edit Mode", "MisCursos", "Docente", new { editar = true }, null)
    }
    else {
        @Html.ActionLink("Calificar", "MisCursos", "Docente", new { editar = false }, null)
    }
    <input type="submit" class="button btn btn-warning" value="Calificar">
</div>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Persona.Legajo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persona.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persona.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nota)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Condicion)
            </th>
        </tr>



        @for (int i = 0; i < Model.Count(); i++) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => Model.ToList()[i].Persona.Legajo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.ToList()[i].Persona.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.ToList()[i].Persona.Apellido)
        </td>
        @if (ViewBag.EditMode == true) {
    <td>
        @Html.EditorFor(Model => Model.ToList()[i].Nota, new { htmlAttributes = new { @class = "form-control" } })
       

    </td>
            
        }
        else {
            if (Model.ToList()[i].Nota == null) {
                <td>
                    <p>--</p>
                </td>
            }
            else {
                <td>
                    @Html.DisplayFor(modelItem => Model.ToList()[i].Nota)
                </td>
            }
        }

        <td>
            @Html.DisplayFor(modelItem => Model.ToList()[i].Condicion)
        </td>
        <td>
            @Html.EditorFor(Model => Model.ToList()[i].AlumnoInscripcionID, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
        </td>
    </tr>
        }
    </table>
}
    
